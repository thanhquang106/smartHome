<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">


        <LinearLayout
           android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời tiết ngày hôm nay"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày 5/8"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="+19°"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="45dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/cloud"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78%"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lpgLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LPG"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/gas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3m/s"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/colinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="740.2 mm"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/smokeLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoke"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />
                    <TextView
                        android:id="@+id/smoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorAccent"
                        />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/led_off"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/round_border"
                    android:src="@drawable/gear"
                    android:layout_margin="10dp"
                    android:layout_marginRight="10dp"/>

                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/door"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/round_border"
                    android:src="@drawable/door" />

        </LinearLayout>

        <TextView
            android:id="@+id/testmic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mic"
            android:gravity="center"
            android:textSize="24dp"/>

       <ImageButton
           android:id="@+id/mic"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_gravity="center"
           android:background="@drawable/round_border"
           android:src="@drawable/mic_pc_foreground"/>
            <TextView
                android:id="@+id/testvideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video"
                android:gravity="center"
                android:textSize="24dp"/>

            <ImageButton
                android:id="@+id/video"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/round_border"
                android:src="@drawable/video_pc_foreground" />


        </LinearLayout>
</ScrollView>